@require 'settings/breakpoints'

.CategoriesHeader
    display flex
    justify-content space-between
    align-items flex-start
    flex-shrink 0

    +small-screen()
        flex-direction column
        align-items flex-start

    &.NoAccount
        position relative
        height calc(50vh - 24px - 3rem)

        +small-screen()
            height calc(50vh - 24px)

.NoAccount_container
    display flex
    flex-direction column
    flex-shrink 0
    height calc(100vh - 48px * 3)

    .NoAccount_box
        display flex
        flex-direction column
        justify-content center
        flex-grow 1

    .NoAccount_chart
        position relative
        bottom inherit
        left inherit
        margin-top 0

.NoAccount_chart
    position absolute
    bottom 3.5rem
    left calc(50% - 93px)

.CategoriesHeader__Toggle
    > span
        margin-right 1em
    > label
        font-size .8em
        position absolute
        line-height 1.5rem

    &.default
        padding-top 2rem

    &.primary
        padding-top 1rem
        padding-bottom 1rem
        color var(--categoriesHeaderTogglePrimaryContrastTextColor)

        input + label
            background-color var(--categoriesHeaderTogglePrimaryBackgroundColor)

        input:checked + label
            background-color emerald

    +small-screen()
        &.default, &.primary
            padding-top 0

.CategoriesHeader_addButton
    position absolute
    bottom -24px
    left 0
    right 0
    margin 0 auto
    width 512px
    +small-screen()
        width calc(100vw - 2rem)
        margin 2rem 0 0
        bottom 0
        position relative
