@require 'settings/breakpoints'

.CategoriesHeader
    display flex
    justify-content space-between
    align-items flex-start
    flex-shrink 0

    +small-screen()
        flex-direction column
        align-items flex-start

.CategoriesHeader__Toggle
    > span
        margin-right 1em
    > label
        font-size .8em
        position absolute
        line-height 1.5rem

    &.default
        padding-top 2rem

    &.primary
        padding-top 1rem
        padding-bottom 1rem
        color var(--primary-contrast-text)

        input + label
            background-color var(--primary-light)

        input:checked + label
            background-color emerald

    +small-screen()
        &.default, &.primary
            padding-top 0
