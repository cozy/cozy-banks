{{#extend "bank-layout"}}
  {{#content "emailTitle"}}
  {{t 'title'}}
  {{/content}}

  {{#content "emailSubtitle"}}
     {{ formatDate date }}
  {{/content}}

  {{#content "content"}}
    {{#each byAccounts as |transactionsByDate accountId| }}
      <mj-section css-class="account" padding-top="0" padding-bottom="10px">
        <mj-column>
          <mj-text padding-top="0" padding-bottom="0">
            <h3 class="js-account">{{ get ../accounts accountId 'label' }} - {{ get ../accounts accountId 'institutionLabel' }}</h3>
          </mj-text>
          {{#eachPair transactionsByDate as |date transactions|}}
            <mj-text padding-top="0" padding-bottom="0">
              <h4 class="js-date text"><span>{{ formatDate date }}</span></h4>
            </mj-text>
            {{#each transactions as |tr reimbursements|}}
              <mj-table>
                <tr class="js-transaction tableRow">
                  <td width="40px"><a href="{{../../../transactionsUrl}}" style="color: inherit; text-decoration: none;"><img style="width: 32px; height: 32px" src='https://files.cozycloud.cc/banks/email-assets/icons/icon-cat-{{ parentCategory this }}.png' /></a></td>
                  <td>
                    <a href="{{../../../transactionsUrl}}" style="color: inherit; text-decoration: none;">{{ capitalize this.label }}</a>
                  </td>
                  <td align="right">
                    <a href="{{../../../transactionsUrl}}" style="color: inherit; text-decoration: none;">
                      <img style="width: 16px; height: 16px; vertical-align: middle;" src='https://files.cozycloud.cc/banks/email-assets/icons/icon-hourglass-blue.png' />
                      {{ t 'treatedBy' }}
                      {{#each this.reimbursements as |reimbursement|}}
                        {{get ../../../../bills this.billId 'vendor'}}{{#unless @last}}, {{/unless}}
                      {{/each}}
                      </a>
                  </td>
                </tr>
              </mj-table>
              {{#unless @last}}<mj-divider padding-bottom="0" padding-top="0" border-width="1px" border-color="#D0D2D5" />{{/unless}}
            {{/each}}
          {{/eachPair }}
        </mj-text>
        </mj-column>
      </mj-section>
    {{/each}}
  {{/content}}
{{/extend}}
