{{#extend "bank-layout"}}
  {{#content "emailTitle"}}
      Alerte Soldes de compte
  {{/content}}
  {{#content "emailSubtitle"}}
    {{ formatDate date }}
  {{/content}}

  {{#content "content"}}
    <mj-section>
      <mj-column>
        <mj-text>
          <a href="{{ balancesUrl }}">Accéder à mes comptes</a>
        </mj-text>
      </mj-column>
    </mj-section>
    {{#each institutions as |institution| }}
      <mj-section css-class="account" padding-top="0" padding-bottom="10px">
        <mj-column>
          <mj-text padding-top="0" padding-bottom="0">
            <h3 class='js-institution'>{{ institution.name }}</h3>
          </mj-text>
          {{#each institution.accounts as |account|}}
            <mj-table>
              <tr class="js-account tableRow">
                <td>{{ capitalize this.label }}</td>
                <td width="150px" align='right'><span>{{ colored this.balance }}</span></td>
              </tr>
            </mj-table>
              {{#unless @last}}<mj-divider padding-bottom="0" padding-top="0" border-width="1px" border-color="#d6d8da" />{{/unless}}
          {{/each }}
        </mj-text>
        </mj-column>
      </mj-section>
    {{/each}}
  {{/content}}
{{/extend}}
